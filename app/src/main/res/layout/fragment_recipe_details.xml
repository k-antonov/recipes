<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.RecipeDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="?attr/actionBarSize">

        <ImageView
            android:id="@+id/recipe_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recipe_detailed"
            android:contentDescription="@string/dish_image"
            tools:src="@color/tangerine" />

        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/upper_medium_padding"
            android:paddingTop="@dimen/upper_medium_padding"
            android:paddingEnd="@dimen/upper_medium_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="Some not very long recipe title. Crispy bacon with cheese" />

        <TextView
            android:id="@+id/ingredients_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/upper_medium_padding"
            android:paddingEnd="@dimen/upper_medium_padding"
            android:text="@string/ingredients"
            android:textSize="@dimen/secondary_text" />

        <ListView
            android:id="@+id/ingredients_list"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/instructions_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/upper_medium_padding"
            android:paddingEnd="@dimen/upper_medium_padding"
            android:text="@string/instructions"
            android:textSize="@dimen/secondary_text" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>